{
    "compilerOptions": {
        "strict": true,
        "target": "ES2018",
        "module": "ES2015",
        "jsx": "react",
        "lib": ["ES2018", "dom"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
